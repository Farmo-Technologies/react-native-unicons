{
  "compilerOptions": {
    "jsx": "react",
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2019","es2017", "es7", "es6", "dom"],
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "./*/**.ts",
    "./*/**.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.dev.*"
  ]
}